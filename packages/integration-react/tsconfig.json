{
  "compilerOptions": {
    "outDir": "dist/js",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": false,
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"],
  "typedocOptions": {
    "exclude": ["**/*+(index|.spec|.e2e).ts"],
    "excludePrivate": true,
    "excludeProtected": true,
    "inputFiles": ["./src"],
    "mode": "file",
    "out": "docs"
  }
}
